<%- include ("header") -%>

    <div class="date-time">
        <h1 class="heading">
            <%= kindOfDay %>
        </h1>
    </div>

    <div class="containers ">


        <div class="list">


            <% for( let i=0; i < newItem.length; i++ ) { %>

                <form action="/delete" method="post">
                    <div class="items-here">
                        <input style="margin-right: 7%;" type="checkbox" name="check" value=<%= newItem[i].id %>  id="checkit" onChange="this.form.submit()" >
                        <p>
                            <%= newItem[i].name %>
                        </p>

                    </div>
                </form>

                <% } %>



        </div>


        <div class="form">



            <form action="/" method="post">
                <label style="font-size: 18px; margin: 3%;" for="takingInput">Task</label>
                <input class="input-text" type="text" name="task" placeholder="Enter your task here" id="takingInput"
                    autocomplete="off">


                <button class="btn btn-success add-btn" type="submit" name="posting" value=<%=kindOfDay %> >
                    <i class="fa-solid fa-plus"></i>Add</button>



            </form>

        </div>
    </div>

    <%- include ("footer") -%>